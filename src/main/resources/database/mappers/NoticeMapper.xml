<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.onion.s1.board.notice.NoticeDAO">
 
 	<sql id="searchCondition">
 	
 		<where>
			<if test="kind == 'title'">
				TITLE LIKE '%' || #{search} || '%'
			</if>
			
			<if test="kind == 'contents'">
				CONTENTS LIKE '%' || #{search} || '%'
			</if>
			
			<if test="kind == 'writer'">
				CONTENTS LIKE '%' || #{search} || '%'
			</if>
		</where>
 	</sql>
 	
 	<select id="getTotalCount" parameterType="Pager" resultType="Long">
 	
 		SELECT COUNT(NUM) FROM NOTICE	
 		<include refid="searchCondition"></include>
		
 	</select>
 	
 	<select id="getBoardList" parameterType="Pager" resultType="NoticeDTO">
 		
 		SELECT * FROM
 		(
	 		SELECT ROWNUM R, N.* FROM
		 		(
			 		SELECT NUM, TITLE, WRITER, REGDATE, HIT FROM NOTICE
					 <include refid="searchCondition"></include>
					ORDER BY NUM DESC
				) N
		) 
		WHERE R BETWEEN #{startRow} AND #{lastRow}
 	</select>
 	
 	<insert id="setBoardAdd" parameterType="BbsDTO">
 		INSERT INTO NOTICE (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT)
 		VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, 0)
 	</insert>
 	
 	<select id="getBoardDetail" parameterType="BoardDTO" resultType="NoticeDTO">
 		SELECT * FROM NOTICE WHERE NUM = #{num}
 	</select>
 	
 	

 </mapper>